<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout Report</title>
  <style>
    .main-container {
      width: 100%;
      min-height: 100vh;
      padding: 48px;
    }

    * {
      color: #1e293b;
      box-sizing: border-box;
    }

    header h1 {
      text-align: center;
      padding: 24px;
    }

    .data-personal {
      margin-top: 32px;
      display: block;
      width: fit-content;
      margin-left: auto;
      margin-right: auto;
      padding: 0px 32px;
    }

    .data-personal>span {
      display: inline-block;
      width: fit-content;
      font-size: 24px;
    }

    .data-personal>span>div {
      margin-top: 16px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 72px;
      font-size: 20px;
    }

    table,
    th,
    td {
      border: 1px solid #ccc;
    }

    th,
    td {
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    .total-shoping {
      font-size: 24px;
      margin-top: 32px;
      padding: 12px 24px;
      background-color: cyan;
    }

    .signiture {
      font-size: 22px;
      float: right;
      margin-top: 80px;
    }
  </style>
</head>

<body>
  <div class="main-container">

    <header>
      <h1>Toko Alat Kesehatan <br> Laporan Belanja Anda</h1>
    </header>

    <section class="data-personal">
      <span style="margin-right: 24px;">
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>User ID :</b>
          <span><%= userData[0].user_id %></span>
        </div>
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>Nama :</b>
          <span><%= userData[0].user_name %></span>
        </div>
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>Alamat :</b>
          <span><%= userData[0].user_address %></span>
        </div>
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>No. Hp :</b>
          <span><%= userData[0].user_contact %></span>
        </div>
      </span>

      <span style="float: right;">
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>Tanggal :</b>
          <span><%= userData[0].transaction_time %></span>
        </div>
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>ID paypal :</b>
          <span><%= userData[0].user_user_paypal_id %></span>
        </div>
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>Nama Bank:</b>
          <span>Bank Rakyat Indonesia</span>
        </div>
        <div style="border-bottom: 1px solid #b0b3b6; padding-bottom: 8px;">
          <b>Cara Bayar</b>
          <span><%= userData[0].payment_method %></span>
        </div>
      </span>
    </section>

    <main style="clear: both;">
      <table>
        <thead>
          <th>No</th>
          <th>Nama</th>
          <th>Jumlah</th>
          <th>Harga</th>
        </thead>
        <tbody>
          <% userData.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.product_name %></td>
              <td><%= item.product_quantity %></td>
              <td>Rp. <%= item.product_price %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="total-shoping">
        total belanja termasuk pajak
        <strong>
          Rp. <%=  totalPrice %>
        </strong>
      </div>

      <div class="signiture">
        Tertanda <strong><%=  shopData[0].user_name %></strong>
      </div>

    </main>
  </div>
</body>

</html>